/* Container for the entire chat */
.chat-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  width: 100%;
  background-color: #f6f6f6;
  padding: 10px;
  box-sizing: border-box;
  position: relative;
}

/* 菜单图标 */
.menu-icon {
  position: absolute;
  top: 10px;
  left: 10px;
  z-index: 10;
}

.menu-icon-image {
  width: 30px;
  height: 30px;
}

/* Container for the messages */
.messages {
  flex: 1;
  overflow-y: auto;
  padding-bottom: 10px;
}

/* Message bubble */
.message {
  display: flex;
  margin-bottom: 10px;
  align-items: flex-start;
}

.user-message {
  justify-content: flex-end;
}

.user-message .message-text {
  background-color: #DCF8C6;
  margin-left: auto;
  border-top-right-radius: 0;
}

.bot-message {
  justify-content: flex-start;
}

.bot-message .message-text {
  background-color: #fff;
  margin-left: 10px;
  border-top-left-radius: 0;
}

.message-text {
  max-width: 70%;
  padding: 10px;
  border-radius: 10px;
  box-shadow: 0 1px 1px rgba(0, 0, 0, 0.1);
}

/* Avatar image */
.avatar {
  width: 36px;
  height: 36px;
  border-radius: 18px;
  margin-right: 10px;
}

/* Input area */
.input-area {
  border-top: 1px solid #ddd;
  background-color: #fff;
  padding: 10px;
}

/* Toggle button */
.toggle-button {
  margin-bottom: 10px;
  padding: 5px 10px;
  background-color: #007BFF;
  color: white;
  border: none;
  border-radius: 5px;
  font-size: 14px;
}

/* Suggestions */
.suggestions {
  display: flex;
  margin-bottom: 10px;
  overflow-x: scroll;
}

.suggestion-button {
  margin-right: 5px;
  padding: 5px 10px;
  background-color: #007BFF;
  color: white;
  border: none;
  border-radius: 5px;
  font-size: 12px;
}

/* Input container */
.input-container {
  display: flex;
  align-items: center;
}

.message-input {
  flex: 1;
  padding: 5px;
  border: 1px solid #ddd;
  border-radius: 20px;
  margin-right: 10px;
  outline: none;
}

.send-button {
  padding: 5px 10px;
  background-color: #007BFF;
  color: white;
  border: none;
  border-radius: 5px;
  font-size: 14px;
}

/* 侧边栏遮罩 */
.sidebar-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 20;
}

/* 侧边栏 */
.sidebar {
  position: fixed;
  top: 0;
  left: 0;
  width: 66.6666%; /* 2/3屏幕宽度 */
  height: 100%;
  background-color: #ffffff;
  box-shadow: 2px 0 5px rgba(0, 0, 0, 0.3);
  z-index: 30;
  display: flex;
  flex-direction: column;
  padding: 20px;
  transition: transform 0.3s ease-in-out;
}

.sidebar-content {
  flex: 1;
}

.sidebar-button {
  width: 100%;
  padding: 10px;
  margin-bottom: 10px;
  background-color: #007BFF;
  color: white;
  border: none;
  border-radius: 5px;
  text-align: left;
  font-size: 16px;
}
